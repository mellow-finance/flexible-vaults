{
  "name": "flexible-vaults",
  "license": "UNLICENSED",
  "version": "1.0.0",
  "repository": "https://github.com/mellow-finance/flexible-vaults",
  "scripts": {
    "prettier": "forge fmt ./src/* ./test/* ./scripts/*",
    "deploy:arbitrum": "forge script ./scripts/arbitrum/Deploy.s.sol:Deploy --fork-url $(grep ARBITRUM_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --verify --etherscan-api-key $(grep ETHERSCAN_API_KEY .env | cut -d '=' -f2)",
    "deploy:arbitrum:streth": "forge script ./scripts/arbitrum/ArbitrumStrETH.s.sol:Deploy --fork-url $(grep ARBITRUM_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow --verify --etherscan-api-key $(grep ETHERSCAN_API_KEY .env | cut -d '=' -f2)",
    "deploy:plasma": "forge script ./scripts/plasma/Deploy.s.sol:Deploy --fork-url $(grep PLASMA_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --verify",
    "deploy:plasma:streth": "forge script ./scripts/plasma/PlasmaStrETH.s.sol:Deploy --fork-url $(grep PLASMA_RPC .env | cut -d '=' -f2,3,4,5) --broadcast  --slow",
    "deploy:base": "forge script ./scripts/base/Deploy.s.sol:Deploy --fork-url $(grep BASE_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow --verify --etherscan-api-key $(grep ETHERSCAN_API_KEY .env | cut -d '=' -f2)",
    "deploy:base:tqeth": "forge script ./scripts/base/tqETH.s.sol:Deploy --fork-url $(grep BASE_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow --verify --etherscan-api-key $(grep ETHERSCAN_API_KEY .env | cut -d '=' -f2)",
    "deploy:base:uni-vault": "forge script ./scripts/base/UniVault.s.sol:Deploy --fork-url $(grep BASE_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow",
    "deploy:base:collector": "forge script ./scripts/collectors/Deploy.s.sol:Deploy --fork-url $(grep BASE_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow",
    "deploy:ethereum": "forge script ./scripts/ethereum/Deploy.s.sol:Deploy --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow --verify --etherscan-api-key $(grep ETHERSCAN_API_KEY .env | cut -d '=' -f2)",
    "deploy:ethereum:swap": "forge script ./scripts/ethereum/DeploySwapModule.s.sol:Deploy --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow --verify --etherscan-api-key $(grep ETHERSCAN_API_KEY .env | cut -d '=' -f2)",
    "deploy:ethereum:test": "forge script ./scripts/ethereum/MainnetTest.s.sol:Deploy --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow",
    "deploy:ethereum:tqeth": "forge script ./scripts/ethereum/tqETH.s.sol:Deploy --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow",
    "deploy:ethereum:tqeth:pre-prod": "forge script ./scripts/ethereum/tqETHPreProd.s.sol:Deploy --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow",
    "deploy:ethereum:streth": "forge script ./scripts/ethereum/strETH.s.sol:Deploy -vvvv --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow",
    "deploy:ethereum:rsteth+": "forge script ./scripts/ethereum/rstETHPlusTest.s.sol:Deploy -vvvv --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow",
    "deploy:ethereum:malpha": "forge script ./scripts/ethereum/mAlpha.s.sol:Deploy -vvvv --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow",
    "deploy:ethereum:collector": "forge script ./scripts/collectors/Deploy.s.sol:Deploy --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow",
    "deploy:monad:test:core": "forge script ./scripts/monad/Deploy.s.sol:Deploy --fork-url $(grep MONAD_TESTNET_RPC .env | cut -d '=' -f2,3,4,5) --gas-estimate-multiplier 200 --broadcast --slow --verify --verifier sourcify",
    "deploy:monad:test": "forge script ./scripts/monad/MVTtest.s.sol:Deploy -vvvv --fork-url $(grep MONAD_TESTNET_RPC .env | cut -d '=' -f2,3,4,5) --gas-estimate-multiplier 300 --broadcast --slow --verify --verifier sourcify",
    "deploy:monad:core": "forge script ./scripts/monad/Deploy.s.sol:Deploy --fork-url $(grep MONAD_RPC .env | cut -d '=' -f2,3,4,5) --gas-estimate-multiplier 200 --broadcast --slow --verify --verifier sourcify --verifier-url https://sourcify-api-monad.blockvision.org/",
    "deploy:monad:mvt": "forge script ./scripts/monad/MVT.s.sol:Deploy -vvvv --fork-url $(grep MONAD_RPC .env | cut -d '=' -f2,3,4,5) --gas-estimate-multiplier 300 --broadcast --slow --verify --verifier sourcify --verifier-url https://sourcify-api-monad.blockvision.org/",
    "deploy:monad:vshMON": "forge script ./scripts/monad/vshMON.s.sol:Deploy -vvvv --fork-url $(grep MONAD_RPC .env | cut -d '=' -f2,3,4,5) --gas-estimate-multiplier 300 --broadcast --slow --verify --verifier sourcify --verifier-url https://sourcify-api-monad.blockvision.org/",
    "deploy:monad:collector": "forge script ./scripts/monad/DeployCollector.s.sol:Deploy --fork-url $(grep MONAD_RPC .env | cut -d '=' -f2,3,4,5) --broadcast --slow --gas-estimate-multiplier 300 --verify --verifier sourcify --verifier-url https://sourcify-api-monad.blockvision.org/",
    "test": "ETH_RPC=$(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) yarn test:base",
    "test:ci": "yarn test:base --deny-warnings --no-match-test .*_NO_CI",
    "test:integration": "ETH_RPC=$(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) yarn test:base --match-path './test/integration/**'",
    "test:base": "forge test --fork-url $ETH_RPC --gas-limit 10000000000000000 --fork-block-number 22730425 -vvv",
    "test:acceptance:ethereum": "forge test --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --gas-limit 10000000000000000 --fork-block-number 23437454 -vvv --match-path ./test/integration/AcceptanceTest.t.sol",
    "test:migration:ethereum": "forge test --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --gas-limit 10000000000000000 --fork-block-number 23437454 -vvv --match-path ./test/integration/MigrationTest.t.sol",
    "test:solvency:streth": "forge test --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --gas-limit 10000000000000000 --fork-block-number 23437454 -vvv --match-path ./test/integration/StrETHSolvencyTest.t.sol",
    "test:swap": "forge test --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --gas-limit 10000000000000000 --fork-block-number 23437454 -vvv --match-path ./test/unit/utils/SwapModule.t.sol",
    "test:swap:integration": "forge test --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --gas-limit 10000000000000000 --fork-block-number 23437454 -vvv --match-path ./test/integration/SwapModuleTest.t.sol",
    "coverage:report": "forge coverage --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --gas-limit 10000000000000000 --fork-block-number 22730425 --force --report lcov && genhtml lcov.info -o report --branch-coverage && rm lcov.info",
    "coverage:report:swap": "forge coverage  --match-path ./test/unit/utils/SwapModule.t.sol --fork-url $(grep ETH_RPC .env | cut -d '=' -f2,3,4,5) --gas-limit 10000000000000000 --fork-block-number 23437454 --report lcov && genhtml lcov.info  --ignore-errors inconsistent -o report --branch-coverage && rm lcov.info",
    "compile": "forge build --use 0.8.25 --cache-path cache",
    "sizes": "forge build --sizes --force",
    "scc:report": "scc src --sort names --no-cocomo --exclude-dir interfaces --by-file --format wide > scc-report.txt"
  }
}